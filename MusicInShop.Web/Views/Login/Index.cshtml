@{
    Layout = "~/Views/Shared/_LayoutForLog.cshtml";
    ViewBag.Title = "Login";
}

@using System.Web.Optimization
@model MusicInShop.Web.Models.UserLogin

    <div class="account-pages mt-5 mb-5">
        <div class="text-center">
            <div class="container">

                <div class="row padded">
                    <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12">
                        <div class="block1"></div>
                    </div>

                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card">

                            <div class="card-body p-4">

                                <div class="text-center w-75 m-auto">
                                    <span><img src="~/Content/img/white.png" alt="" height="75"></span>
                                    <h3> <p class="text-success mb-4 mt-3">Welcome</p></h3>
                                    <h1> <p class="text-danger mb-4 mt-3"></p></h1>
                                    <h1> <p class="text-danger mb-4 mt-3"></p></h1>
                                </div>

                                <form action="#">
                                    @Html.ValidationSummary(true)
                                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "LoginForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-group mb-3">
                                            @*<label for="emailaddress">USERNAME</label>*@
                                            @Html.LabelFor(m => m.Credential, new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.Credential, new
                                       {
                                           placeholder = "Enter username",
                                           title = "USERNAME",
                                           value = "",
                                           name = "username",
                                           id = "username",
                                           @class = "form-control"
                                       })


                                        </div>

                                        <div class="form-group mb-3">
                                            @*<label for="password">PASSWORD</label>*@
                                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                            @Html.TextBoxFor(m => m.Password, new

                                       {
                                           @class = "form-control",
                                           type = "password",
                                           title = "PASSWORD",
                                           placeholder = "Enter password",
                                           value = "",
                                           name = "password",
                                           id = "password"
                                       })



                                        </div>

                                        <div class="form-group mb-3">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="checkbox-signin" checked>
                                                <label class="custom-control-label" for="checkbox-signin">REMEMBER ME</label>
                                            </div>
                                        </div>

                                        <div class="form-group mb-0 text-center">
                                            <button class="btn btn-success btn-block" type="submit">SIGN IN </button>
                                        </div>
                                    }
                                </form>



                            </div> <!-- end card-body -->
                        </div>
                        <!-- end card -->
                        <div class="text-center w-75 m-auto">
                            <span><img src="~/Content/img/white.png" alt="" height="65"></span>
                            <p class="text-muted mb-4 mt-3"></p>
                        </div>
                        <!--
    <div class="row mt-3">
        <div class="col-12 text-center">
            <p> <a href="@Url.Action("Recoverpw","Home")" class="text-muted ml-1">Vous avez oublié votre mot de passe?</a></p>
            <p class="text-muted">Vous n'avez pas encore de compte ?<a href="@Url.Action("Register","Home")" class="text-primary font-weight-medium ml-1">Créer un compte</a></p>
        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>


@section Scripts {
@Scripts.Render("~/bundles/validation/js")

    <script type="text/javascript">
        $(function () {
            $("#LoginForm").validate({
                rules: {
                    Username: {
                        required: true
                    },
                    Password: {
                        required: true
                    }
                },
                submitHandler: function (form) {
                    form.submit();
                },
                errorPlacement: function (error, element) {
                    $(element)
                        .closest("form")
                        .find("label[for='" + element.attr("id") + "']")
                        .append(error);
                },
                errorElement: "span"
            });
        });
    </script>
}