@model MusicInShop.Web.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-register-section section pt-90 pt-lg-70 pt-md-60 pt-sm-55 pt-xs-45  pb-70 pb-lg-50 pb-md-40 pb-sm-30 pb-xs-20">
    <div class="container">
        <div class="row">
            <!--Login Form Start-->
            
            <div class="col-md-6 col-sm-6">
                <div class="customer-login-register">
                    <div class="form-login-title">
                        <span><img src="~/Content/img/white.png" alt="" height="60"></span>
                        <h2>Вход</h2>
                        <h1></h1>
                    </div>
                    <div class="login-form">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-fild">
                                <p><label>Email <span class="required">*</span></label></p>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { type = "text" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <h2></h2>
                            <div class="form-fild">
                                <p><label>Пароль <span class="required">*</span></label></p>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { type = "password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <h2></h2>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="login-submit">
                                <label>
                                    @Html.EditorFor(model => model.RememberMe, new { htmlAttributes = new { type = "checkbox", @class = "checkbox" } })
                                    @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                                    <h6></h6>
                                    <span>Запомнить меня</span>
                                </label>
                                
                            </div>
                            <div class="login-submit">
                                <h4></h4>
                                <button type="submit" class="btn">Вход</button>
                                <span><img src="~/Content/img/white.png" alt="" height="70"></span>
                            </div>
                          
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>